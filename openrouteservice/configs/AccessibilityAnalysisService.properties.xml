<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties>
<comment>Accessibility Analysis Service (AAS) - Configurationsfile</comment>
<!--================================================================-->
<!-- *** Logging *** -->
<!-- Log configuration file -->
<entry key="LOGFILE">../config.log.xml</entry>
<!--================================================================-->
<!-- *** Web Service Name *** -->
<entry key="SERVICENAME">OSM AAS</entry>
<!--================================================================-->
<!-- *** OpenLS Presentation Service *** -->
<!-- Parameters for connection to OpenLS Presentation Service (OPTIONAL) -->
<!-- Is NO OpenLS Presentation Service available, the outputType in e.g. 'Map' doesn't work!! -->
<entry key="OPENLS_PS"></entry>
<!-- Name of Layers -->
<entry key="OPENLS_PS_LAYERS"></entry>
<!-- Name of Styles -->
<entry key="OPENLS_PS_STYLES"></entry>
<!-- *** Color of the Accessibility Polygon *** -->
<entry key="COLOR_ACCESSIBILITY_POLYGON">#00ff00</entry>
<!--================================================================-->
<!-- *** Parameters for saving and access to the Analyse Maps *** -->
<entry key="MAPS_PATH">/srv/www/tomcat/8080/osm-routing/tmp</entry>
<entry key="MAPS_PATH_WWW">http://openls.giub.uni-heidelberg.de/osm-routing/eu/tmp</entry>
<!-- ================================================================ -->
<!-- *** Parameters for connection to PostGIS Database for Node & Location search *** -->
<entry key="PG_NODES_SERVER">localhost</entry>
<entry key="PG_NODES_DB">osm_routing</entry>
<entry key="PG_NODES_NODETABLE">roadnodes</entry>
<entry key="PG_NODES_LOCATIONTABLE">points</entry>
<entry key="PG_NODES_PORT">5432</entry>
<entry key="PG_NODES_USER">openlsfoo</entry>
<entry key="PG_NODES_PASSWD">readwriteHD</entry>
<entry key="PG_NODES_NUMBEROFCONNECTIONS">3</entry>
<!--================================================================-->
<!-- *** Maximum Distance for search a Node to a Location, in Meters [m] *** -->
<entry key="MAX_SEARCH_DISTANCE_NODE">500</entry>
<!-- ================================================================ -->
<!-- *** Minimum Analysis Value in Seconds*** -->
<!-- This Value is independent of the number of edges in the graph -> 180Seconds == 3 Minutes-->
<entry key="MIN_VALUE">60</entry>
<!-- *** Maximum Analysis Value in Seconds*** -->
<!-- This Value is independent of the size in the graph -> 3600 Seconds == 1 Hour-->
<entry key="MAX_VALUE">1800</entry>
<!--================================================================-->
</properties>