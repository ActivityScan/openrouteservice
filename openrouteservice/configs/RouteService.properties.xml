<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties>
<comment>OpenLS Route Service Configurationsfile</comment>
<!--================================================================-->
<!-- *** Logging *** -->
<!-- Log configuration file -->
<entry key="LOGFILE">../config.log.xml</entry>
<!--================================================================-->
<!-- *** Web Service Name *** -->
<entry key="SERVICENAME">OSM RS</entry>
<!--================================================================-->
<!-- *** OpenLS Location Utility Service / GeoCoder & ReverseGeoCoder *** -->
<!-- Parameters for connection to OpenLS Location Utility Service (OPTIONAL) -->
<!-- Is NO OpenLS Location Utility Service available, the AddressType in e.g. 'StartPosition' doesn't work!! -->
<entry key="OPENLS_LUS"></entry>
<!--================================================================-->
<!-- *** OpenLS Presentation Service *** -->
<!-- Parameters for connection to OpenLS Presentation Service (OPTIONAL) -->
<!-- Is NO OpenLS Presentation Service available, the outputType in e.g. 'RouteMap' doesn't work!! -->
<entry key="OPENLS_PS">http://localhost:8080/osm-routing/getmap</entry>
<!-- Name of Layers -->
<!-- <entry key="OPENLS_PS_LAYERS">osm:roads</entry> -->
<entry key="OPENLS_PS_LAYERS">osm_auto:roads</entry>
<!-- Name of Styles -->
<entry key="OPENLS_PS_STYLES">osm_roads_CurvedLabels7</entry>
<!--================================================================-->
<!-- *** OpenLS Directory Service *** -->
<!-- Parameters for connection to OpenLS Directory Service (OPTIONAL) -->
<!-- Is NO OpenLS Directory Service available, the POITpye in e.g. 'StartPosition' doesn't work!! -->
<entry key="OPENLS_DS"></entry>
<!--================================================================-->
<!-- *** Parameters for saving and access to temp-files [RouteHandles,KML,SLD,...] *** -->
<entry key="TMP_PATH">/opt/tomcat7/osm-routing/temp</entry>
<!--<entry key="WWW_PATH">http://openls.giub.uni-heidelberg.de/osm-routing/tmp</entry>-->
<!--================================================================-->
<!-- *** Parameters for RouteGeometry *** -->
<!-- double Value wich divides the Scale Parameter in the RouteRequest to get a value for generalize the calculated route -->
<entry key="ROUTEGEOM_SCALE">1000</entry>
<!--================================================================-->
<!-- *** Parameter to find a Edge/Street *** -->
<!-- double value of the radius[m] to find a Edge/Street around a given Point/Position -->
<entry key="POINT_RADIUS_EDGE">500</entry>
<!--================================================================-->
</properties>
