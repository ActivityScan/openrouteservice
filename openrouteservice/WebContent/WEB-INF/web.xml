   <filter>
    <filter-name>RequestRateThrottleFilter</filter-name>
    <filter-class>heigit.ors.servlet.filters.RequestRateThrottleFilter</filter-class>
    <init-param>
      <param-name>hits</param-name>
      <param-value>1000</param-value>
    </init-param> 
    <init-param>
      <param-name>period</param-name>
      <param-value>3600</param-value>
    </init-param> 
  </filter>

  <filter-mapping>
    <filter-name>RequestRateThrottleFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

   <filter>
    <filter-name>PiwikRequestFilter</filter-name>
    <filter-class>heigit.ors.servlet.filters.PiwikRequestFilter</filter-class>
    <init-param>
      <param-name>SiteID</param-name>
      <param-value>16</param-value>
    </init-param> 
    <init-param>
      <param-name>APIURL</param-name>
      <param-value>http://129.206.66.245:8010</param-value>
    </init-param> 
  </filter>
  
  <filter-mapping>
    <filter-name>PiwikRequestFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <listener>
    <listener-class>
        heigit.ors.servlet.util.ORSServletContextListener
    </listener-class>
  </listener>
</web-app>


